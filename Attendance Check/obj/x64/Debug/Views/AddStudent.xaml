<Page
    x:Name="pageRoot"
    DataContext="{Binding DefaultViewModel, RelativeSource={RelativeSource Self}}"
    x:Class="AttendanceCheck.Views.AddStudent"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:AttendanceCheck.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <Grid.Background>
            <ImageBrush Stretch="Fill" ImageSource="/Assets/Background.jpg"/>
        </Grid.Background>
        <Grid.RowDefinitions>
            <RowDefinition Height="140"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Back button and page title -->
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="120"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Image x:ConnectionId='15' x:Name="BtN_Menu" RenderTransformOrigin=".5,.5" Source="/Assets/option2.png" Margin="0,20,0,0"
                        VerticalAlignment="Center"
                        AutomationProperties.Name="Back"
                        AutomationProperties.AutomationId="BackButton"
                        AutomationProperties.ItemType="Navigation Button"
                                                 HorizontalAlignment="Center" Height="50" Canvas.ZIndex="3">
                <Image.RenderTransform>
                    <CompositeTransform Rotation="0"/>
                </Image.RenderTransform>
            </Image>
            <Border x:Name="Status" Background="#FF9C27B0" Margin="0,20,0,0" IsHitTestVisible="false" Opacity="0.75" Grid.ColumnSpan="2">
                <TextBlock x:Name="Title" Text="New student" TextWrapping="NoWrap" Style="{StaticResource HeaderTextBlockStyle}" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="#FFF3E5F5"/>
            </Border>
        </Grid>
        <Grid x:Name="menu" Grid.RowSpan="3" Grid.ColumnSpan="2" Canvas.ZIndex="2" Visibility="Collapsed">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid Grid.Column="0" x:Name="LeftPanel" Background="#FF9C27B0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Grid.Resources>
                    <Storyboard x:Name="HideMenu">
                        <DoubleAnimation Storyboard.TargetName="LeftPanel"
                                     Storyboard.TargetProperty= "Opacity"
                                     From="0.85"
                                     To="0"
                                     Duration="0:0:0.3" />
                    </Storyboard>
                    <Storyboard x:Name="ShowMenu">
                        <DoubleAnimation Storyboard.TargetName="LeftPanel"
                                     Storyboard.TargetProperty="Opacity"
                                     From="0"
                                     To="0.85"
                                     Duration="0:0:0.3" />
                    </Storyboard>

                    <Storyboard x:Name="Hidebrd">
                        <DoubleAnimation Storyboard.TargetName="brd"
                                     Storyboard.TargetProperty= "Opacity"
                                     From="0.25"
                                     To="0"
                                     Duration="0:0:0.3" />
                    </Storyboard>
                    <Storyboard x:Name="Showbrd">
                        <DoubleAnimation Storyboard.TargetName="brd"
                                     Storyboard.TargetProperty="Opacity"
                                     From="0"
                                     To="0.25"
                                     Duration="0:0:0.3" />
                    </Storyboard>

                    <Storyboard x:Name="ShowNotifi">
                        <DoubleAnimation Storyboard.TargetName="FingerStatusBorder"
                                     Storyboard.TargetProperty="Opacity"
                                     From="0"
                                     To="0.75"
                                     Duration="0:0:0.3" />
                    </Storyboard>
                    <Storyboard x:Name="HideNotifi">
                        <DoubleAnimation Storyboard.TargetName="FingerStatusBorder"
                                     Storyboard.TargetProperty="Opacity"
                                     From="0"
                                     To="0.75"
                                     Duration="0:0:0.3" />
                    </Storyboard>

                    <Storyboard x:Name="HideMenuBtn">
                        <DoubleAnimation Storyboard.TargetName="BtN_Menu"
                                     Storyboard.TargetProperty= "Opacity"
                                     From="0"
                                     To="1"
                                     Duration="0:0:0.3" />
                    </Storyboard>

                    <Storyboard x:Name="OpenRotateBtnMenu">
                        <DoubleAnimation Storyboard.TargetName="BtN_Menu"
                                     From="0"                                     
                                     Storyboard.TargetProperty="(UIElement.RenderTransform).(CompositeTransform.Rotation)" 
                                     To="360" 
                                     Duration="0:0:0.3" />
                    </Storyboard>
                    <Storyboard x:Name="CloseRotateBtnMenu">
                        <DoubleAnimation Storyboard.TargetName="BtN_Menu"
                                     Storyboard.TargetProperty="(UIElement.RenderTransform).(CompositeTransform.Rotation)" 
                                     From="360" To="0"
                                     Duration="0:0:0.3" />

                    </Storyboard>

                </Grid.Resources>
                <Border Grid.ColumnSpan="2" VerticalAlignment="Top" Margin="20" BorderBrush="#FFF3E5F5" BorderThickness="0,0,0,1" Grid.Row="0" Padding="0,0,50,0">
                    <TextBlock Text="Menu" FontSize="36" TextAlignment="Center" Foreground="#FFF3E5F5" HorizontalAlignment="Left" Margin="0,20,0,0" VerticalAlignment="Bottom"/>
                </Border>
                <StackPanel x:ConnectionId='6' x:Name="HomeBtn" Orientation="Horizontal"                         Grid.Row="1" Margin="0">
                    <Image Source="/Assets/HHome.png" Height="30" Margin="20" VerticalAlignment="Center"/>
                    <TextBlock x:Name="TextHome" Margin="0,20,20,20" Text="Home" FontSize="16" Foreground="#FFF3E5F5" VerticalAlignment="Center"/>
                </StackPanel>
                <StackPanel x:ConnectionId='7' x:Name="NewAccountBtn" Orientation="Horizontal"                               Grid.Row="2" Margin="0">
                    <Image Source="/Assets/newaccount.png" Height="30" Margin="20" VerticalAlignment="Center"/>
                    <TextBlock x:Name="TextNewAccountBtn" Margin="0,20,20,20" Text="New Account" FontSize="16" VerticalAlignment="Center" Foreground="#FFF3E5F5"/>
                </StackPanel>
                <StackPanel x:ConnectionId='8' x:Name="AllAccountsBtn" Orientation="Horizontal"                                Grid.Row="3" Margin="0">
                    <Image Source="/Assets/allaccounts.png" Height="30" Margin="20" VerticalAlignment="Center"/>
                    <TextBlock x:Name="TextAllAccountsBtn" Margin="0,20,20,20" Text="All Accounts" FontSize="16" VerticalAlignment="Center" Foreground="#FFF3E5F5"/>
                </StackPanel>
                <StackPanel x:ConnectionId='9' x:Name="AddStudentBtn" Orientation="Horizontal"                               Grid.Row="4" Margin="0" Background="#FFCE93D8">
                    <Image Source="/Assets/new.png" Height="30" Margin="20" Canvas.ZIndex="1" VerticalAlignment="Center"/>
                    <TextBlock x:Name="TextAddStudent" Margin="0,20,20,20" Text="New Student" FontSize="16" VerticalAlignment="Center" Foreground="#FFF3E5F5"/>
                </StackPanel>
                <StackPanel x:ConnectionId='10' x:Name="AllStudentsBtn" Orientation="Horizontal"                                Grid.Row="5" Margin="0">
                    <Image Source="/Assets/all.png" Height="30" Margin="20" VerticalAlignment="Center"/>
                    <TextBlock x:Name="TextAllStudents" Margin="0,0,20,0" Text="All Students" FontSize="16" VerticalAlignment="Center" Foreground="#FFF3E5F5"/>
                </StackPanel>
                <StackPanel x:ConnectionId='11' x:Name="NewLecBtn" Orientation="Horizontal"                           Grid.Row="6" Margin="0">
                    <Image Source="/Assets/add.png" Height="30" Margin="20" VerticalAlignment="Center"/>
                    <TextBlock x:Name="TextNewLec" Margin="0,0,20,0" Text="New lecture" FontSize="16" VerticalAlignment="Center" Foreground="#FFF3E5F5"/>
                </StackPanel>
                <StackPanel x:ConnectionId='12' x:Name="AllLecBtn" Orientation="Horizontal"                           Grid.Row="7" Margin="0">
                    <Image Source="/Assets/alllec.png" Height="30" Margin="20" VerticalAlignment="Center"/>
                    <TextBlock x:Name="TextAllLecBtn" Margin="0,20,20,20" Text="All Lectures" FontSize="16" VerticalAlignment="Center" Foreground="#FFF3E5F5"/>
                </StackPanel>
                <StackPanel x:ConnectionId='13' x:Name="settingsBtn" Orientation="Horizontal"                             Grid.Row="8" Margin="0">
                    <Image Source="/Assets/settings.png" Height="30" Margin="20" VerticalAlignment="Center"/>
                    <TextBlock x:Name="Textsettings" Margin="0,20,20,20" Text="Settings" FontSize="16" VerticalAlignment="Center" Foreground="#FFF3E5F5"/>
                </StackPanel>
                <StackPanel x:ConnectionId='14' x:Name="LogOutBtn" Orientation="Horizontal"                           Grid.Row="9" VerticalAlignment="Bottom" Margin="0">
                    <Image Source="/Assets/signout.png" Height="30" Margin="20" VerticalAlignment="Center"/>
                    <TextBlock x:Name="TextLogOut" Margin="0,20,20,20" Text="Log out" FontSize="16" VerticalAlignment="Center" Foreground="#FFF3E5F5"/>
                </StackPanel>
            </Grid>
            <Border x:ConnectionId='5' x:Name="brd" Grid.Column="1" Background="Black"                        Visibility="Collapsed"/>
        </Grid>
        <Border x:Name="FingerStatusBorder" Background="#FFCE93D8" Opacity="0.75" Grid.Row="1" Margin="0,20,0,0" Padding="5">
            <TextBlock x:Name="FingerStatusText" Text="" Margin="0" TextAlignment="Center" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="20"/>
        </Border>
        <StackPanel x:Name="Data" Grid.Row="2" VerticalAlignment="Center" HorizontalAlignment="Center">
            <StackPanel.Background>
                <SolidColorBrush Color="#FF9C27B0" Opacity="0.35"/>
            </StackPanel.Background>
            <TextBlock x:Name="newfpid" Visibility="Collapsed"/>
            <TextBlock x:Name="ch" Visibility="Collapsed"/>
            <StackPanel Orientation="Vertical" Margin="20">
                <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,0,0,20">
                    <StackPanel.Resources>
                        <Storyboard x:ConnectionId='2' x:Name="HideFINGER"                                  >
                            <DoubleAnimation Storyboard.TargetName="FINGER"
                                     Storyboard.TargetProperty="Opacity"
                                     From="1"
                                     To="0"
                                     Duration="0:0:0.1" />
                        </Storyboard>
                        <Storyboard x:ConnectionId='3' x:Name="ShowFINGER"                                  >
                            <DoubleAnimation Storyboard.TargetName="FINGER"
                                     Storyboard.TargetProperty="Opacity"
                                     From="0"
                                     To="1"
                                     Duration="0:0:0.1" />
                        </Storyboard>
                    </StackPanel.Resources>
                    <Image x:ConnectionId='4' x:Name="FINGER" Source="/Assets/x_tap.png" HorizontalAlignment="Center" VerticalAlignment="Center" Width="50"                       />
                    <TextBlock x:Name="FStatus" Text="Click to take fingerprint." TextWrapping="Wrap" FontSize="20" Foreground="#FFCE93D8" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,10,0,0"/>
                </StackPanel>
                <StackPanel>
                    <TextBox x:Name="tbxAcadimicId"
                               TextWrapping="Wrap" Width="300"
                               TextAlignment="Center" VerticalAlignment="Center" FontSize="20" FontFamily="Global User Interface" HorizontalAlignment="Center" BorderBrush="#FF9C27B0" BorderThickness="5,3,3,3" PlaceholderText="Id" Background="#FFF3E5F5" Margin="0,0,0,10" InputScope="Number"/>
                    <TextBox x:Name="tbxName" 
                     Grid.Row="1" 
                     Margin="0" 
                     TextWrapping="Wrap" 
                     Width="300" 
                     TextAlignment="Center" 
                     VerticalAlignment="Center" 
                     FontSize="20" 
                     FontFamily="Global User Interface" 
                     HorizontalAlignment="Center" 
                     BorderBrush="#FF9C27B0" 
                     BorderThickness="5,3,3,3" 
                     PlaceholderText="Student name" Background="#FFF3E5F5"/>
                </StackPanel>
            </StackPanel>
            <Button x:ConnectionId='1' x:Name="btnAdd" Content="ADD" Padding="5" Margin="0,0,0,20" FontFamily="Global User Interface" HorizontalAlignment="Center" Background="#FF9C27B0"                      Grid.Row="1" BorderBrush="#FFF3E5F5" Foreground="#FFF3E5F5" IsEnabled="False" />
        </StackPanel>
    </Grid>
</Page>

